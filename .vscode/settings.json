{
  // --- General Project Settings ---
  // Define the default Python interpreter for the workspace.
  // Extensions like Mypy will often pick this up automatically.
  "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Windows
  // "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python", // Linux/macOS
  // --- Python-Specific Editor Settings ---
  // These settings apply only to files identified as Python files.
  "[python]": {
    // Set Ruff as the default tool for formatting code.
    "editor.defaultFormatter": "charliermarsh.ruff",
    // Enable formatting when you save a file.
    "editor.formatOnSave": true,
    // Run code actions on save.
    "editor.codeActionsOnSave": {
      // Ruff will automatically fix lint errors (like unused imports) and format the code.
      "source.fixAll": "explicit"
    }
  },
  // --- Ruff Extension Settings ---
  //enable ruff
  "ruff.enable": true,
  // Explicitly tell the Ruff extension which interpreter to use.
  "ruff.interpreter": [
    "${workspaceFolder}\\.venv\\Scripts\\python.exe" // Windows
    // "${workspaceFolder}/.venv/bin/python" // Linux/macOS
  ],
  // --- Mypy Type Checker Extension Settings ---
  // Explicitly tell the Mypy extension which interpreter to use.
  "mypy-type-checker.interpreter": [
    "${workspaceFolder}\\.venv\\Scripts\\python.exe" // Windows
    // "${workspaceFolder}/.venv/bin/python" // Linux/macOS
  ],
  //Use the mypy from enviroment
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "chat.disableAIFeatures": true,
}